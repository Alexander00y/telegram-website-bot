import os
from aiogram import Bot, Dispatcher, types
from github import Github

# Токены теперь берутся из переменных окружения (GitHub Secrets)
bot = Bot(token=os.getenv("TELEGRAM_TOKEN"))
dp = Dispatcher(bot)

@dp.message_handler(content_types=types.ContentType.DOCUMENT)
async def handle_zip(message: types.Message):
    try:
        # Скачиваем файл
        file = await bot.get_file(message.document.file_id)
        await file.download("website.zip")
        
        # Загружаем в GitHub (используем токен из Secrets)
        g = Github(os.getenv("GITHUB_TOKEN"))
        repo = g.get_repo(f"{os.getenv('GITHUB_REPOSITORY')}")  # Например: "IvanovIvan/telegram-website-bot"
        
        # Читаем ZIP и загружаем в репозиторий
        with open("website.zip", "rb") as f:
            content = f.read()
        repo.create_file("site.zip", "Добавлен сайт", content)
        
        await message.reply("✅ Сайт загружен! Ссылка будет через 1-2 минуты.")

    except Exception as e:
        await message.reply(f"❌ Ошибка: {str(e)}")

if __name__ == '__main__':
    from aiogram import executor
    executor.start_polling(dp)
